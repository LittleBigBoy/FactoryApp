<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/product"
            android:scaleType="fitXY"
            android:background="#F0F0F0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="伊穆拉面"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:id="@+id/name"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_pj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:hint="商品满足你的期待吗？说说它的优点和美中不足的地方吧"
        android:textColorHint="#CCCCCC"
        android:textColor="#333333"
        android:textSize="13sp"
        android:gravity="top"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_three"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pj"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/pj"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给商品评个分呗"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"/>
        <com.hedgehog.ratingbar.RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:clickable="true"
            app:halfstart="false"
            app:starCount="5"
            app:starEmpty="@drawable/star"
            app:starFill="@drawable/star_select"
            android:layout_marginLeft="10dp"
            app:starImageHeight="30dp"
            app:starImageWidth="30dp" />
    </LinearLayout>
</LinearLayout>