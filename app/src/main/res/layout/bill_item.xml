<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="@dimen/dp_10"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="@dimen/dp_10"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/numbering_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="20040304"
           android:textSize="12sp"/>
       <TextView
           android:id="@+id/time_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2019-01"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/recharge_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="3500.00"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/other_payment_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0.00"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/service_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/Margin_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>
       <TextView
           android:id="@+id/installation_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>

       <TextView
           android:id="@+id/maintain_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="-2981.00"
           android:textSize="12sp"
           android:layout_marginLeft="10dp"/>
   </LinearLayout>

</LinearLayout>