<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/red"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_return"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_actionbar_return"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厂家寄件申请"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/bg_shape_et"
        android:hint="搜索配件"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        />
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="没有我想要的配件"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"/>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        >
        <RelativeLayout
            android:id="@+id/ll_my_package"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_package"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_toolpackage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/white"
                android:layout_below="@+id/img_package"
                android:layout_centerHorizontal="true"
                android:text="我的配件包"
                />

            <TextView
                android:id="@+id/tv_num_bg"
                android:visibility="invisible"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:gravity="center"
                android:background="@drawable/blue_bot"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

</RelativeLayout>