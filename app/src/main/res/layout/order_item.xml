<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/dp_4"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_shape"
                android:text="维修"
                android:padding="@dimen/dp_4"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="工单号：123456789"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="15sp"
                android:textColor="@color/gray_three"/>
            <LinearLayout
                android:id="@+id/ll_order_tracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/all"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="工单跟踪"
                    android:textSize="15sp"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="已邮寄配件"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="15sp"
                android:textColor="@color/red"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_four"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="热水器不通电"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_warranty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="质保"
                    android:padding="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="15sp"
                    android:background="@drawable/btn_shape"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="下单时间：2019-1-8 17:05:00"
                    android:textSize="15sp"
                    android:textColor="@color/gray_three"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户信息 猪先生 18523654785"
                        android:textSize="15sp"
                        android:textColor="@color/gray_three"/>
                    <TextView
                        android:id="@+id/tv_order_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单账号 458523655@qq.com"
                        android:textSize="15sp"
                        android:textColor="@color/gray_three"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宁波市江北区长阳路人才公寓5栋1702室"
                        android:textSize="15sp"
                        android:textColor="@color/gray_three"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="检测价格￥150.00"
                    android:textSize="20sp"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_four"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="投诉"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/edit_shape"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:textColor="@color/gray_two"/>
            <TextView
                android:id="@+id/tv_leave_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="留言 2"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="16sp"
                android:background="@drawable/edit_shape"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:textColor="@color/gray_two"/>
            <TextView
                android:id="@+id/tv_see_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="查看详情"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="16sp"
                android:background="@drawable/edit_shape"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:textColor="@color/red"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
